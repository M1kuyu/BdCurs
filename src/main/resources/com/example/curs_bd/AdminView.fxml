<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.AdminController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="Save" fx:id="saveButton" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button text="Update" fx:id="updateButton" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Button text="Delete" fx:id="deleteButton" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label text="Phone:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
</GridPane>
