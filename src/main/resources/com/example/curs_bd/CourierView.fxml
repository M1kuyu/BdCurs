<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="view.CourierController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Центр доставки:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ComboBox fx:id="centerComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Button text="Загрузить посылки" onAction="#handleLoadButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
</GridPane>
