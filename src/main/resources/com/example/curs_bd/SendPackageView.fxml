<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="com.example.controllers.SendPackageController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Получатель:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ComboBox fx:id="receiverComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Центр отправки:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="centerComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Тип доставки:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <ComboBox fx:id="typeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Вес посылки:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="weightInput" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Button text="Отправить посылку" onAction="#handleSendButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Button text="Назад" onAction="#handleBackButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
</GridPane>
