<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="view.SendPackageController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Центр отправки:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ComboBox fx:id="centerComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Тип доставки:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="typeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Имя получателя:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="receiverInput" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Вес посылки:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="weightInput" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Адрес получателя:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="addressInput" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Button text="Отправить посылку" onAction="#handleSendButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
</GridPane>
