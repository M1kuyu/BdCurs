<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="view.RegistrationController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Имя:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="nameInput" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Телефон:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="phoneInput" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Адрес:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="addressInput" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Пароль:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <PasswordField fx:id="passwordInput" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Подтвердите пароль:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <PasswordField fx:id="confirmPasswordInput" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Button text="Регистрация" onAction="#handleRegisterButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
</GridPane>
